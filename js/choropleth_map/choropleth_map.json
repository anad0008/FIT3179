{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 50 Tourist Destinations",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/anad0008/FIT3179/main/js/choropleth_map/neo_110m.topojson",
    "format": {"type": "topojson", "feature": "ne_110m"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/anad0008/FIT3179/main/data/World_Visiting_1965-2020.csv"
        },
        "key": "Country Name",
        "fields": ["2020"]
      }
    },
    {"calculate": "2020", "as": "2020"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "2020 Visitations",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
      {"field": "2020", "type": "quantitative"}
    ]
  },
  "config": {}
}